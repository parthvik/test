datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Experience {
  company    String?
  createdAt  DateTime  @default(now())
  endDate    DateTime?
  engineer   Engineer? @relation(fields: [engineerId], references: [id])
  engineerId String?
  id         String    @id @default(cuid())
  startDate  DateTime?
  title      String?
  updatedAt  DateTime  @updatedAt
}

model Engineer {
  budget      Budget?      @relation(fields: [budgetId], references: [id])
  budgetId    String?
  createdAt   DateTime     @default(now())
  educations  Education[]
  experiences Experience[]
  id          String       @id @default(cuid())
  isFullTime  Boolean?
  name        String?
  updatedAt   DateTime     @updatedAt
}

model Skill {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Budget {
  amount    Float?
  createdAt DateTime   @default(now())
  engineers Engineer[]
  id        String     @id @default(cuid())
  updatedAt DateTime   @updatedAt
}

model Education {
  createdAt   DateTime  @default(now())
  degree      String?
  endDate     DateTime?
  engineer    Engineer? @relation(fields: [engineerId], references: [id])
  engineerId  String?
  id          String    @id @default(cuid())
  institution String?
  startDate   DateTime?
  updatedAt   DateTime  @updatedAt
}

model JobType {
  createdAt DateTime              @default(now())
  id        String                @id @default(cuid())
  typeField EnumJobTypeTypeField?
  updatedAt DateTime              @updatedAt
}

enum EnumJobTypeTypeField {
  Option1
}
